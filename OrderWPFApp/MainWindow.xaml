<Window x:Class="OrderWPFApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="MainWindow" Height="250" Width="500"
        ResizeMode="NoResize"
        WindowStartupLocation="CenterScreen">
    <DockPanel>
        <Menu DockPanel.Dock="Top">
            <MenuItem Header="Product Window" Click="Product_Click">
            </MenuItem>
            <MenuItem Header="Search Window" Click="Search_Click">
            </MenuItem>
        </Menu>
        <Label Content="Product Management" HorizontalAlignment="Center" Margin="0,50,0,0" VerticalAlignment="Top" FontSize="22" FontWeight="Bold"/>
    </DockPanel>
</Window>
